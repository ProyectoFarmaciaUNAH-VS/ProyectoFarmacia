@model List<ProyectoFarmacia.BL.Producto>
@{
    ViewBag.Title = "Inicio";
}

<div class="site-section">
	<div class="container">
		<div class="row">
			<div class="title-section text-center col-12">
				<h2 class="text-uppercase">Productos populares</h2>
			</div>
		</div>
		<div class="row">
			@foreach (var prod in Model.Where(r => r.CategoriaId == 1))//Categoría = "Análgesicos"
			{
				<div class="col-sm-6 col-lg-4 text-center item mb-4">
					<span class="tag">Sale</span>
					<a href="shop-single.html"> <img class="item imgnormalizada" src="@(ViewBag.adminWebSiteURL + @prod.UrlImagen)" alt="Image" width="100%" height="185px"></a>
					<h3 class="text-dark"><a href="shop-single.html">@prod.Descripcion</a></h3>
					<p class="price">L @prod.Precio</p>
				</div>
			}
		</div>
		<div class="row mt-5">
			<div class="col-12 text-center">
				<a href="" class="btn btn-primary px-4 py-3">Ver todo</a>
			</div>
		</div>
	</div>
</div>

<div class="site-section bg-light">
	<div class="container">
		<div class="row">
			<div class="title-section text-center col-12">
				<h2 class="text-uppercase">Productos Nuevos</h2>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12 block-3 products-wrap">
				<div class="nonloop-block-3 owl-carousel">
					@foreach (var prod in Model)
					{
						<div class="text-center item mb-4">
						<a href="shop-single.html"> <img src="@(ViewBag.adminWebSiteURL + @prod.UrlImagen)" alt="Image" width="100%" height="185px"></a>
						<h3 class="text-dark"><a href="shop-single.html">@prod.Descripcion</a></h3>
						<p class="price">L @prod.Precio</p>
					</div>

					}
					
				</div>
			</div>
		</div>
	</div>
</div>
<div class="site-section bg-secondary bg-image" style="background-image: url('~/images/bg_2.jpg');">
	<div class="container">
		<div class="row align-items-stretch">
			<div class="col-lg-6 mb-5 mb-lg-0">
				<a href="#" class="banner-1 h-100 d-flex" style="background-image: url('~/images/bg_1.jpg');">
					<div class="banner-1-inner align-self-center">
						<h2>Pharma Productos</h2>
						<p>
							Esto es texto de prueba.
						</p>
					</div>
				</a>
			</div>
			<div class="col-lg-6 mb-5 mb-lg-0">
				<a href="#" class="banner-1 h-100 d-flex" style="background-image: url('~/images/bg_2.jpg');">
					<div class="banner-1-inner ml-auto  align-self-center">
						<h2>Recomendado por expertos</h2>
						<p>
							Esto es texto de prueba.
						</p>
					</div>
				</a>
			</div>
		</div>
	</div>
</div>


