@model ProyectoFarmacia.BL.Producto

@{
    ViewBag.Title = "Detalle";
}

<h2>Productos</h2>
<hr />
<h4>Detalle del registro</h4>

<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Precio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Precio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.fechaVencimiento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fechaVencimiento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria.Descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.existencias)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.existencias)
        </dd>

        <dt>
			@Html.DisplayNameFor(model => model.UrlImagen)
        </dt>

        <dd>
			<img src="@Model.UrlImagen" alt="@Model.Descripcion" style="width:64px; height:auto" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Activo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Activo)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Editar", new { id = Model.ID }, new { @class = "btn btn-warning btn-sm", @type = "button" })
    @Html.ActionLink("Ir a la lista", "Index", null, new { @class = "btn btn-default btn-sm", @type = "button" })
</p>
