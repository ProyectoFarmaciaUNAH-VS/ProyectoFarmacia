@model ProyectoFarmacia.BL.Producto

@{
    ViewBag.Title = "Eliminar";
}

<h2>Productos</h2><hr />
<div class="col-md-offset-1">
	<h4>¿Estás seguro que quieres eliminar este producto?</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Precio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Precio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.fechaVencimiento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fechaVencimiento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoriaId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.existencias)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.existencias)
        </dd>

		<dt>
			@Html.DisplayNameFor(model => model.UrlImagen)
		</dt>

		<dd>
			<img src="@Model.UrlImagen" alt="@Model.Descripcion" style="width:64px; height:auto" />
		</dd>

        <dt>
            @Html.DisplayNameFor(model => model.Activo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Activo)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions col-lg-offset-1" >
            <input type="submit" value="Eliminar" class="btn btn-danger btn-sm" /> 
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default btn-sm", @type = "button" })
        </div>
    }
</div>
