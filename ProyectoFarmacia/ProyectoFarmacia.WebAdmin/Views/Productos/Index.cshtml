@model IEnumerable<ProyectoFarmacia.BL.Producto>

@{
    ViewBag.Title = "Productos";
}

<h2>Productos</h2>

<p>
    @Html.ActionLink("Nuevo producto", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.existencias)
        </th>
		<th>
			@Html.DisplayNameFor(model => model.fechaVencimiento)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.urlImagen)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Activo)
		</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.existencias)
        </td>
		<td>
			@Html.DisplayFor(modelItem => item.fechaVencimiento)
		</td>
		<td>
			<img src="@item.urlImagen" alt="@item.Descripcion" style="width:64px; height:auto"/>
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Activo)
		</td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.ID }) |
            @Html.ActionLink("Detalle", "Detalle", new { id=item.ID }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id=item.ID })
        </td>
    </tr>
}

</table>
